<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="#E0E0E0"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:contentDescription="Event Poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivEventPoster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Type"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event Start Date"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Event End Date"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventStartDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationStartDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Registration Start Date"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventEndDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationEndDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Registration End Date"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationStartDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#E0E0E0"
            android:contentDescription="QR Code"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationEndDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnViewEntrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View Entrants"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivQRCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnViewWaitingList" />

        <Button
            android:id="@+id/btnViewWaitingList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="View Waiting List"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/btnViewEntrants"
            app:layout_constraintBottom_toBottomOf="@id/btnViewEntrants"
            app:layout_constraintStart_toEndOf="@id/btnViewEntrants"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCancelEvent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel Event"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#F44336"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnViewEntrants"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>