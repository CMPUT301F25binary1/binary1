<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnFinalEntrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="80dp"
            android:background="#4CAF50"
            android:padding="16dp"
            android:text="Final Entrants"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/btnCancelledEntrants"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCancelledEntrants"
            app:layout_constraintTop_toTopOf="@id/btnCancelledEntrants"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvEventDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ongoing Events"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#E0E0E0"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="centerCrop"
            android:contentDescription="Event Poster"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventDetailsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event name:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivEventPoster"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name of Event"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/tvEventNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event description:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brief description of event"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/tvEventDescriptionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEventTimeLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event time and location:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvEventTimeLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Time and location of event"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/tvEventTimeLocationLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationDatesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration start and end date:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEventTimeLocation"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationDates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Registration dates"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationDatesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationTimesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration start and end time:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationDates"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRegistrationTimes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Registration times"
            android:textSize="14sp"
            android:textColor="#757575"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationTimesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvQRCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR code for the event"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegistrationTimes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#E0E0E0"
            android:contentDescription="QR Code"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvQRCodeLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnEntrantsWaitingList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Entrants Waiting List"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivQRCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnChosenEntrants" />

        <Button
            android:id="@+id/btnChosenEntrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chosen Entrants"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/btnEntrantsWaitingList"
            app:layout_constraintBottom_toBottomOf="@id/btnEntrantsWaitingList"
            app:layout_constraintStart_toEndOf="@id/btnEntrantsWaitingList"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCancelledEntrants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelled Entrants"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnEntrantsWaitingList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnFinalEntrants" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>